{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "solid",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:solid/typescript",
    "plugin:@typescript-eslint/recommended",
    "./.eslintrc-shared.json" // Shared configuration for root and docs.
  ],
  "rules": {    
    "solid/jsx-no-undef": "off"
  }
}
