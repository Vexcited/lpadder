{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@docusaurus",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@docusaurus/recommended",
    "plugin:@typescript-eslint/recommended",
    "../.eslintrc-shared.json" // Shared configuration for root and docs.
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
